@model IEnumerable<EventsWebsite.Models.MaterialModel>

@{
    ViewBag.Title = "Materiaal Beheer";
}
<div class="intro-header">
    <h1>@ViewBag.Title</h1>
</div>
<div class="container">
    <p>
        <a class="btn btn-success" href="@Url.Action("HiredMaterials")">
            Verhuurde materialen
        </a>
        
    </p>

    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Barcode)
            </th>
            <th>
               Nummer
            </th>
            <th>
                Actie
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Barcode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.ActionLink("Huur", "RentMaterial", new { number = item.Number })
                </td>
            </tr>
        }
    </table>
</div>